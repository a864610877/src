@model Ecard.Mvc.Models.ShopLiquidates.ShopRollbacks
@{
    Layout = null;
} 
@if (Model.Items.Count == 0)
{
    <div class="nonfound">没有取消交易的请求</div>
}
else
{
      <table>
        <thead>
            <tr > 
                <th class="submitTime">
                    提交时间
                </th>
                <th class="dealSubmitTime">
                    交易时间
                </th>
                <th class="serialNo">
                    流水号
                </th>
                <th  class="accountName">
                    交易卡号
                </th>
                <th  class="dealType">
                    交易类型
                </th>
                <th class="amount">
                    交易金额
                </th>
                <th class="operation">操作</th>
            </tr>
        </thead>
    </table>
    <div class="items">
    <table>
        <tbody>
            @foreach (var shopDealLog in Model.Items)
            {
                <tr   class="rollback"> 
                    <td class="submitTime">
                        @shopDealLog.SubmitTime.ToString("yyyy-MM-dd HH:mm")
                    </td>
                    <td class="dealSubmitTime">
                        @shopDealLog.DealSubmitTime.ToString("yyyy-MM-dd HH:mm")
                    </td>
                    <td class="serialNo">@shopDealLog.SerialNo
                    </td>
                    <td class="accountName">@shopDealLog.AccountName
                    </td>
                    <td class="dealType">@shopDealLog.DealType
                    </td>
                    <td class="amount">
                        ￥@shopDealLog.Amount
                    </td>
                    <td class="operation">
                    <a class="deleteRollback" href="@Url.Action("DeleteRollback", new { Id = shopDealLog.RollbackId })">删除</a>
                    </td>
                </tr>
        
            }
        </tbody>
    </table>
    </div>
} 