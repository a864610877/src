<script type="text/javascript">

    var pageS = 10;
    var index = 0;
    var ActionName = "";
    var ActionUrl = "";
    var jsonData = "";
    function selectInput(choose) {
        pageS = choose.value;
        submitClicks(choose);
    }
    //获取数据
    function AjaxGetData(PageIndex, PageSize) {
        var Mobile = $('#Mobile').val();
        var DisplayName = $('#DisplayName').val();
        var babyName = $('#babyName').val();
       
        $.ajax({
            url: "/Account/ListAccountUserPost",
            data: { pageIndex: PageIndex, pageSize: PageSize, Mobile: Mobile, DisplayName: DisplayName, babyName: babyName },
            type: "post",
            //cache: false,
            dataType: "json",
            async: false,
            success: function (data) {
                var listVal = new Array();
                listVal.push("UserId");
                listVal.push("DisplayName");
                listVal.push("Mobile");
                listVal.push("babyName");
                listVal.push("babySex");
                listVal.push("BirthDate");
                $.GetstrTrs(data, listVal, "UserId");
            },
            error: function () {
                window.location.href = "/Home/UserError";
            }
        })
    }
    //操作
    function OperatorThis(RName, RUrl) {
        ActionName = RName;
        ActionUrl = RUrl;
        switch (RName) {
            case "Init":
                window.location.href = RUrl;
                break;
            case "Rebate":
                window.location.href = RUrl;
                break;
            case "Owner":
                window.location.href = RUrl;
                break;
            case "Edit":
                window.location.href = RUrl;
                break;
            case "ListAccountUserExport":
                window.location.href = RUrl;
                break;
            case "DeriveTXT":
                window.location.href = RUrl;
                break;
            case "Create":
                jsonData = getChecks();
                if (jsonData != null && jsonData != "") {
                    window.location.href = RUrl + "?data=" + jsonData;
                }
                break;
            case "Opens":
                jsonData = getChecks();
                $(".tip p").text("您确定对选中卡片进行会员卡发放操作吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Approves":
                jsonData = getChecks();
                $(".tip p").text("您确认该卡可以进入会员卡发放阶段吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Creates":
                jsonData = getChecks();
                $(".tip p").text("您确定对选中的卡号进行批量建卡吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Suspend":
                $(".tip p").text("你确定要停用当前商户吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Suspends":
                jsonData = getChecks();
                $(".tip p").text("您确定停用所有选择的卡号？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Resume":
                $(".tip p").text("你确定要启用当前商户吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Resumes":
                jsonData = getChecks();
                $(".tip p").text("您确定启用所有选择的卡号？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Delete":
                $(".tip p").text("您确定要删除当前会员?");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Deletes":
                jsonData = getChecks();
                $(".tip p").text("您确定要删除所选中的卡?");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "SetDistributor":
                $(".tip p").text("您确定要更改经销商?");
                var sh_Id = $("[id=Distributor.Key]").val();
                var obj = "{ \"ShopId\":" + sh_Id + " }"
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                $("#btn_Sure").attr("onClick", "Sure_Args('" + obj + "')");
                break;
            case "SetDistributors":
                jsonData = getChecks();
                var ShopId = $("[id=Distributor.Key]").val();
                if (jsonData != null && jsonData != "") {
                    var obj = "{\"strIds\": \"" + jsonData + "\", \"ShopId\":" + ShopId + " }"
                    $(".tip p").text("您确定要更改所选会员的经销商?");
                    $(".ShowHide").fadeIn(100);
                    $(".tip").fadeIn(200);
                    $("#btn_Sure").attr("onClick", "Sure_Args('" + obj + "')");
                }
                break;
        }
    }
