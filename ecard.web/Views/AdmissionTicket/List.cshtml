@using Moonlit
@model  Ecard.Mvc.Models.AdmissionTickets.ListAdmissionTickets

<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="#">首页</a></li>
        <li><a href="#">@Model.Localize("title")</a></li>
    </ul>
</div>
<div class="rightinfo">


    <table id="selectTd">
        <tr>
            @Html.EditorForModel("condition")
            <td>
                <input name="" type="button" onclick="submitClicks(this);" class="scbtn" style="height: 29px;" value="查询" />
            </td>

        </tr>
    </table>
    <div class="searchCommand">
        @Html.ToolbarOfList(Model.GetToolbarActions())
</div>
<div class="listbox">
    <table class="tablelist">
        <thead id="TabelThead" style="border-color: #5ec2f9; border-bottom-style: solid">
            <tr>
                <th><input id="ckAll" type="checkbox" onclick="selectAll()" /></th>
                @Html.Ths(Model.List, Model.GetItemType())
                @Html.Th(Ths.Operation, new { width = "134px" })
            </tr>
        </thead>
        <tbody id="tbodysNum">

            @using (var scope = new IteratorScope())
            {
                if (Model.List != null && Model.List.Count > 0)
                {
                    foreach (var item in Model.List)
                    {

                        <tr>
                            <td><input name="selectBox" type="checkbox" value=@item.id /></td>
                            @Html.Tds(item, Model.GetItemType())
                            <div>@Html.ToolbarOfItem(Model.GetItemToobalActions(item))</div>
                        </tr>
                        scope.Next();
                    }
                }

            }
        </tbody>
    </table>
    <div id="pagehtml">
        @(ViewBag.pageHtml == null ? "" : ViewBag.pageHtml)
    </div>
</div>
</div>
<script type="text/javascript">

    var pageS = 10;
    var index = 0;
    var ActionName = "";
    var ActionUrl = "";
    var jsonData = "";
    function selectInput(choose) {
        pageS = choose.value;
        submitClicks(choose);
    }
    //获取数据
    function AjaxGetData(PageIndex, PageSize) {
        var hasStartPwd = false, hasAccountToken = false;
        var Name = $('#Name').val();
        var State = $("[id=State.Key]").val();
        var startTime = $('#Data_Start').val();
        var endTime = $('#Data_End').val();
        $.ajax({
            url: "/AdmissionTicket/ListPost",
            data: { PageIndex: PageIndex, PageSize: PageSize, name: Name, state: State, startTime: startTime, endTime: endTime},
            type: "post",
            //cache: false,
            dataType: "json",
            async: false,
            success: function (data) {
                var listVal = new Array();
                listVal.push("id");
                listVal.push("id");
                listVal.push("name");
                listVal.push("adultNum");
                listVal.push("childNum");
                listVal.push("amount");
                listVal.push("weekendAmount");
                listVal.push("state");
                listVal.push("crateTime");
                listVal.push("boor");
                $.GetstrTrs(data, listVal, "id");
            },
            error: function () {
                window.location.href = "/Home/UserError";
            }
        })
    }
    //操作
    function OperatorThis(RName, RUrl) {
        ActionName = RName;
        ActionUrl = RUrl;
        switch (RName) {
            case "Create":
                window.location.href = RUrl;
                break;
            case "Edit":
                window.location.href = RUrl;
                break;
            case "Suspend":
                $(".tip p").text("你确定要停售当前门票吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Suspends":
                jsonData = getChecks();
                $(".tip p").text("您确定停售所有选择的门票？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Resume":
                $(".tip p").text("你确定要启用当前门票吗？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Resumes":
                jsonData = getChecks();
                $(".tip p").text("您确定启用所有选择的吗门票？");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Delete":
                $(".tip p").text("您确定要删除当前门票?");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            case "Deletes":
                jsonData = getChecks();
                $(".tip p").text("您确定要删除所选中的门票?");
                $(".ShowHide").fadeIn(100);
                $(".tip").fadeIn(200);
                break;
            default:
                break;
        }
    }
</script>

