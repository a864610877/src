@model PageModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    if (!ViewBag.HasLayout)
    {
        Layout = null;
    }
}

@section scripts{
    <script src="/Content/themes/t/scripts/swfobject.js" type="text/javascript"></script>
    <script src="/Content/themes/t/scripts/components.js" type="text/javascript"></script>
    <script src="/Content/themes/t/scripts/dealonline.js" type="text/javascript"></script>
}
<div class="sec_pan" id="payAccount">
    @using (Html.BeginForm("PayConfirm", "DealOnline"))
    {
        <div class="title-box">
            <h3>
                在线支付</h3>
        </div>
        <div class="">
            <div class="">
                @Html.Partial("payProcessing", "accountselector")
            </div>
            <fieldset>
                <legend>在线支付</legend>
                <div class="mainInput">
                    <div class="fieldInput">
                        <label class="large" for="accountName">
                            卡号:</label>
                        <input type="text" readonly="readonly" name="accountName" id="accountName" class="t_ipt_fc largeInput " maxlength="@Model.Site.AccountNameLength" />
                        <input type="hidden" name="accountToken" id="accountToken"/>
                        <a id="btnReadAccount" href="#accountInputCtrl">重新刷卡</a>
                    </div>
                    <div class="fieldInput">
                        <label class="large" for="amount">
                            金额:</label>
                        <input type="text" name="amount" id="amount" class="t_ipt_fc largeInput" maxlength="8" />
                    </div>
                </div>
                <div id="account">
                    @Html.Action("Account", "Account")
                </div>
            </fieldset>
        </div>
        <div class="buttons rtl">
            <a id="next" href="PayConfirm" class="post large disabled" target="#secbox" accesskey="n">
                下一步</a>
                <button>交易</button>
                </div>
        <div class="point_list">
            <h3>
                用户提示</h3>
            <ol class="list_hasnum">
                <li>输入卡号或直接读卡信息。</li>
                <li>点击下一步。</li>
            </ol>
        </div>
        @Html.Hidden("shopName", ViewData["shopName"])
    }
</div>
